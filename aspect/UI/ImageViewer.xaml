<UserControl x:Class="Aspect.UI.ImageViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Aspect.UI"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             SizeChanged="_HandleSizeChanged">
  <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ClipToBounds="True">
    <Image x:Name="mImage" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="None"
           SizeChanged="_HandleSizeChanged">
      <Image.RenderTransform>
        <TransformGroup>
          <ScaleTransform x:Name="mScaleTransform" />
          <TranslateTransform x:Name="mTranslateTransform" />
        </TransformGroup>
      </Image.RenderTransform>
    </Image>
  </Canvas>
</UserControl>
