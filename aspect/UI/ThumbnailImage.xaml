<UserControl x:Class="Aspect.UI.ThumbnailImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Aspect.UI"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Image x:Name="mImage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Uniform" />
    <mah:ProgressRing x:Name="mProgress" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      Padding="8" />
  </Grid>
</UserControl>
